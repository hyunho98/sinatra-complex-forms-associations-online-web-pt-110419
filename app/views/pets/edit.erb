<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Edit the Pet's Name: </label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>">

  <br>

  <p>Select an existing owner or create a new one below.</p>

  <h3>Existing Owners</h3>
  <%= @owners.each do |owner| %>
  <input type="radio" name="pet[owner]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
